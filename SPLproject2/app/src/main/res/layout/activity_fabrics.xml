<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fabrics">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@android:color/white"
            android:text="Fabric"
            android:textStyle="bold"
            android:layout_marginHorizontal="10dp"
            android:textSize="30sp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

                <ImageView
                    android:id="@+id/f1"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/fabric1"/>
                <TextView
                    android:id="@+id/t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blue Stripe"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="-110dp"
                    android:layout_marginTop="160dp"/>

                <Button
                    android:id="@+id/button1"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="-70dp"
                    android:layout_marginTop="200dp"
                    android:background="@drawable/roundredbutton"
                    android:text="Select"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

                <ImageView
                    android:id="@+id/f3"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@android:color/white"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/fabric3"/>
                <TextView
                    android:id="@+id/t2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="White Stripe"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="-120dp"
                    android:layout_marginTop="160dp"/>
                <Button
                    android:id="@+id/button2"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="-70dp"
                    android:layout_marginTop="200dp"
                    android:background="@drawable/roundredbutton"
                    android:text="Select"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/f4"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/f5" />
                <TextView
                    android:id="@+id/t3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="White Box shape"
                    android:layout_marginTop="160dp"
                    android:layout_marginLeft="-130dp"
                    android:textColor="@android:color/white"
                    />
                <Button
                    android:id="@+id/button3"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="-90dp"
                    android:layout_marginTop="200dp"
                    android:background="@drawable/roundredbutton"
                    android:text="Select"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

                <ImageView
                    android:id="@+id/f2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@android:color/white"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/fabric4"
                    />
                <TextView
                    android:id="@+id/t4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:text="Navy blue"
                    android:layout_marginLeft="-100dp"
                    android:layout_marginTop="160dp"
                    />
                <Button
                    android:id="@+id/button4"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="200dp"
                    android:background="@drawable/roundredbutton"
                    android:layout_marginLeft="-70dp"
                    android:text="Select"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />


        </LinearLayout>

        <Button
            android:id="@+id/next"
            android:layout_width="70dp"
            android:layout_height="50dp"
           android:layout_marginLeft="175dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundredbutton"
            android:text="NEXT"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/white" />
    </LinearLayout>
