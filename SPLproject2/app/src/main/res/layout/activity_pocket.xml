<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pocket">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@android:color/white"
            android:text="Pocket"
            android:textStyle="bold"
            android:layout_marginHorizontal="10dp"
            android:textSize="30sp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <ImageView
                android:id="@+id/p1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/p1"/>
            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Design 1"
                android:textColor="@android:color/white"
                android:layout_marginLeft="-110dp"
                android:layout_marginTop="160dp"/>

            <Button
                android:id="@+id/button1"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginLeft="-70dp"
                android:layout_marginTop="200dp"
                android:background="@drawable/roundredbutton"
                android:text="Select"
                android:textStyle="bold"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/f3"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@android:color/white"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/pocket8"/>
            <TextView
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Design 2"
                android:textColor="@android:color/white"
                android:layout_marginLeft="-120dp"
                android:layout_marginTop="160dp"/>
            <Button
                android:id="@+id/button2"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginLeft="-70dp"
                android:layout_marginTop="200dp"
                android:background="@drawable/roundredbutton"
                android:text="Select"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/f4"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/pocket7" />
            <TextView
                android:id="@+id/t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Design 3"
                android:layout_marginTop="160dp"
                android:layout_marginLeft="-130dp"
                android:textColor="@android:color/white"
                />
            <Button
                android:id="@+id/button3"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginLeft="-60dp"
                android:layout_marginTop="200dp"
                android:background="@drawable/roundredbutton"
                android:text="Select"
                android:textStyle="bold"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/f2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@android:color/white"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/pocket9"
                />
            <TextView
                android:id="@+id/t4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="Design 4"
                android:layout_marginLeft="-100dp"
                android:layout_marginTop="160dp"
                />
            <Button
                android:id="@+id/button4"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginTop="200dp"
                android:background="@drawable/roundredbutton"
                android:layout_marginLeft="-70dp"
                android:text="Select"
                android:textStyle="bold"
                android:textColor="@android:color/white" />


        </LinearLayout>

        <Button
            android:id="@+id/next"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginLeft="175dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundredbutton"
            android:text="NEXT"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/white" />
</LinearLayout>

    </ScrollView>
